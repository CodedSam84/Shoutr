<h1>Dashboard</h1>

<%= form_for @shout do |f| %>
  <%= f.hidden_field :content_type, value: "TextShout" %>
  <%= f.fields_for :content do |c| %>
    <%= c.text_field :body, placeholder: "Shout here!", required: true %>
  <% end %>
  <%= f.submit "Post shout" %>
<% end %>

<%= form_for @shout do |f| %>
  <%= f.hidden_field :content_type, value: "PhotoShout" %>
  <%= f.fields_for :content do |c| %>
    <%= c.file_field :photo %>
  <% end %>
  <%= f.submit "Post shout" %>
<% end %>
<br>
<%= render @shouts %>